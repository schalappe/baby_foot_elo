{
  "name": "baby_foot_elo-monorepo",
  "private": true,
  "scripts": {
    "dev:frontend": "cd frontend && bun run dev",
    "dev:backend": "cd backend && python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "dev": "concurrently \"bun run dev:frontend\" \"bun run dev:backend\"",
    "build:frontend": "cd frontend && bun run build",
    "build:backend": "echo 'No backend build step yet'",
    "build": "bun run build:frontend && bun run build:backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "shadcn": "^3.6.2"
  }
}
