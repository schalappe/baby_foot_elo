{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node16",
    "target": "esnext",
    "module": "node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "#app": [".nuxt/dist/app"],
      "#app/*": [".nuxt/dist/app/*"]
    },
    "types": ["@nuxt/schema", "@types/node"]
  },
  "exclude": ["node_modules", ".nuxt", "dist"],
  "include": ["types", "nuxt.config.ts", "nuxt.d.ts",
              "components", "pages", "composables", "plugins", "models",
              "**/*.ts", "**/*.d.ts", "**/*.tsx", "**/*.vue"]
}
